{
  "name": "Sneaky Lingo",
  "description": "Subtly replace words on web pages with their foreign-language equivalents to help you learn vocab as you browse",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "ninja_icon.png"
  },
  "icons": {
    "48": "ninja_icon_24.png",
    "128": "ninja_icon_128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}
